%header.navbar.navbar-fixed-top{role: "navigation"}
  .container
    .navbar-header
      = link_to t(:site_title), root_url, :class => 'navbar-brand'
    .collapse.navbar-collapse.bs-navbar-collapse.navbar-main
      %ul.nav.navbar-nav
        - @navbar_entries.each do |entry|
          %li
            = link_to t(entry[:title]), entry[:url]

      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li
            = link_to 'Sign Out', destroy_user_session_path, :method => :delete
        - else
          %li
            = link_to 'Sign In', new_user_session_path

